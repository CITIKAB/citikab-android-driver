<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom"
    android:weightSum="2"
    android:orientation="vertical">
    <com.trioangle.goferdriver.custompalette.FontTextView
        android:id="@+id/tv_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/choose_map"
        android:textColor="@color/textblack"
android:layout_margin="20dp"
        android:textSize="18sp"
        app:fontname="@string/font_UBERMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llt_google_map"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_googlemap"
                android:scaleType="fitCenter"
                />

            <com.trioangle.goferdriver.custompalette.FontTextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/google_map"
                android:textColor="@color/textblack"

                app:fontname="@string/font_UBERMedium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_waze"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_wazemap"
                />

            <com.trioangle.goferdriver.custompalette.FontTextView
                android:id="@+id/tv_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/waze_map"
                android:textColor="@color/textblack"
                app:fontname="@string/font_UBERMedium" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
