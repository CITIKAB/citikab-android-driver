<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trip_earning_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="@string/layout_direction"
    tools:context="com.trioangle.goferdriver.paymentstatement.TripEarningDetails">

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/app_background">

        <ImageView
            android:id="@+id/insurance_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:scaleX=".6"
            android:scaleY=".6"
            android:src="@drawable/gobackleftarrow"
            android:tint="@color/white" />

        <com.trioangle.goferdriver.custompalette.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/insurance_back"
            android:text="@string/tripsdetails"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontname="@string/font_UBERBook" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/d_buttomboarder"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/colorblack"
                    android:textSize="14sp"
                    app:fontname="@string/font_UBERBook" />

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/ub__green"
                    android:textSize="25sp"
                    app:fontname="@string/font_UBERNews" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/d_buttomboarder"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/tripearnings"
                    android:textAlignment="center"
                    android:textColor="@color/textgray"
                    android:textSize="14sp"
                    app:fontname="@string/font_UBERNews" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:id="@+id/faretxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fare"
                        android:textAlignment="center"
                        android:textColor="@color/textblack"
                        android:textSize="18sp"
                        app:fontname="@string/font_UBERNews" />

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/faretxt"
                        android:paddingStart="5dp"
                        android:text="w"
                        android:textAlignment="center"
                        android:textColor="@color/light_text"
                        android:textSize="18sp"
                        app:fontname="@string/font_UberClone" />

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textblack"
                        android:textSize="18sp"
                        app:fontname="@string/font_UBERNews" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uberfee"
                        android:textAlignment="center"
                        android:textColor="@color/textblack"
                        android:textSize="18sp"
                        app:fontname="@string/font_UBERNews" />

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textblack"
                        android:textSize="18sp"
                        app:fontname="@string/font_UBERNews" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timefare"
                        android:textAlignment="center"
                        android:textColor="@color/textblack"
                        android:textSize="18sp"
                        app:fontname="@string/font_UBERNews" />

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textblack"
                        android:textSize="18sp"
                        app:fontname="@string/font_UBERNews" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/d_buttomboarder"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimatedpayout"
                    android:textAlignment="center"
                    android:textColor="@color/textblack"
                    android:textSize="18sp"
                    app:fontname="@string/font_UBERMedium" />

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textblack"
                    android:textSize="18sp"
                    app:fontname="@string/font_UBERMedium" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:id="@+id/cashcollet_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cashcollected"
                    android:textAlignment="center"
                    android:textColor="@color/textblack"
                    android:textSize="16sp"
                    app:fontname="@string/font_UBERNews" />

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/cashcollet_txt"
                    android:paddingStart="5dp"
                    android:text="w"
                    android:textAlignment="center"
                    android:textColor="@color/light_text"
                    android:textSize="18sp"
                    app:fontname="@string/font_UberClone" />

                <com.trioangle.goferdriver.custompalette.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textblack"
                    android:textSize="16sp"
                    app:fontname="@string/font_UBERNews" />

            </RelativeLayout>

            <com.trioangle.goferdriver.custompalette.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:drawableStart="@drawable/ub__marker_pickup_walk"
                android:drawableTint="@color/ub__green"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="5th St,ALS Nagar, Madambakkam, Chennai, Tamil Nadu"
                android:textAlignment="center"
                android:textColor="@color/colorblockgray"
                android:textSize="13sp"
                app:fontname="@string/font_News" />

            <com.trioangle.goferdriver.custompalette.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:drawableStart="@drawable/ub__marker_pickup_walk"
                android:drawableTint="@color/ub__red"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Sri Varadhapuram,, 86, Varadapuram Main Rd, Nes"
                android:textAlignment="center"
                android:textColor="@color/colorblockgray"
                android:textSize="13sp"
                app:fontname="@string/font_News" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/d_buttomboarder"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:tag="image_tag" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/d_buttomboarder"
                android:divider="@drawable/divider"
                android:dividerPadding="5dp"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/textblack"
                        android:textSize="16sp"
                        app:fontname="@string/font_UBERNews" />

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duration"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textblack"
                        android:textSize="16sp"
                        app:fontname="@string/font_UBERNews" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/textblack"
                        android:textSize="16sp"
                        app:fontname="@string/font_UBERNews" />

                    <com.trioangle.goferdriver.custompalette.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textblack"
                        android:textSize="16sp"
                        app:fontname="@string/font_UBERNews" />
                </LinearLayout>
            </LinearLayout>

            <com.trioangle.goferdriver.custompalette.FontTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@color/light_disable_grey"
                android:gravity="center_vertical"
                android:text="@string/help"
                android:textAlignment="center"
                android:textColor="@color/textblack"
                android:textSize="20sp"
                android:visibility="gone"
                app:fontname="@string/font_UBERNews" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

